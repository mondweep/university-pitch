# LBS Knowledge Graph - Production Environment Configuration
# Copy this file to .env.production and fill in your values

# =============================================================================
# LLM API Keys
# =============================================================================

# OpenAI API Key (required for GPT models)
OPENAI_API_KEY=sk-...

# Anthropic API Key (required for Claude models)
ANTHROPIC_API_KEY=sk-ant-...

# =============================================================================
# Cost Management
# =============================================================================

# Maximum total LLM cost allowed (USD)
MAX_LLM_COST=50.00

# Alert threshold percentage (0-100)
COST_ALERT_THRESHOLD=80.0

# Cost tracking directory
COST_DATA_DIR=data/costs

# =============================================================================
# Batch Processing Configuration
# =============================================================================

# Batch size for processing nodes/edges
BATCH_SIZE=50

# Maximum concurrent API requests
MAX_CONCURRENT_REQUESTS=5

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Retry attempts for failed requests
MAX_RETRIES=3

# Delay between retries (seconds)
RETRY_DELAY=5

# =============================================================================
# Model Selection
# =============================================================================

# Sentiment Analysis Model
# Options: gpt-3.5-turbo, gpt-4, gpt-4-turbo, claude-3-haiku, claude-3-sonnet
SENTIMENT_MODEL=gpt-3.5-turbo

# Topic Extraction Model
# Options: gpt-4, gpt-4-turbo, claude-3-sonnet, claude-3-opus
TOPIC_MODEL=gpt-4-turbo

# NER (Named Entity Recognition) Model
# Options: gpt-4, gpt-4-turbo, claude-3-sonnet
NER_MODEL=gpt-4-turbo

# Persona Classification Model
# Options: gpt-3.5-turbo, gpt-4, claude-3-haiku, claude-3-sonnet
PERSONA_MODEL=gpt-3.5-turbo

# Embedding Model for similarity calculations
# Options: text-embedding-ada-002, text-embedding-3-small, text-embedding-3-large
EMBEDDING_MODEL=text-embedding-ada-002

# =============================================================================
# Graph Database Configuration
# =============================================================================

# MGraph database file location
MGRAPH_DB_PATH=data/graph/graph.json

# Checkpoint directory
CHECKPOINT_DIR=data/checkpoints

# Export directory
EXPORT_DIR=data/exports

# =============================================================================
# AWS Configuration (for deployment)
# =============================================================================

# AWS Region
AWS_REGION=us-east-1

# S3 Bucket for graph storage
S3_BUCKET=lbs-kg-content

# S3 Key prefix
S3_PREFIX=graph/

# CloudFront Distribution ID (optional)
CF_DISTRIBUTION_ID=

# =============================================================================
# Monitoring & Logging
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file location
LOG_FILE=logs/enrichment.log

# Enable detailed metrics
ENABLE_METRICS=true

# Metrics output directory
METRICS_DIR=data/metrics

# =============================================================================
# Enrichment Configuration
# =============================================================================

# Sentiment Analysis
SENTIMENT_BATCH_SIZE=50
SENTIMENT_ENABLED=true

# Topic Extraction
TOPIC_MIN_CONFIDENCE=0.7
TOPIC_MAX_TOPICS_PER_NODE=5
TOPIC_ENABLED=true

# Named Entity Recognition
NER_MIN_CONFIDENCE=0.8
NER_ENTITY_TYPES=PERSON,ORG,LOCATION,SKILL,TECHNOLOGY
NER_ENABLED=true

# Persona Classification
PERSONA_TYPES=prospective_student,current_student,alumni,faculty,employer,partner
PERSONA_ENABLED=true

# Similarity Calculation
SIMILARITY_THRESHOLD=0.7
SIMILARITY_TOP_K=10
SIMILARITY_ENABLED=true

# Topic Clustering
CLUSTERING_MIN_CLUSTER_SIZE=3
CLUSTERING_METHOD=hierarchical
CLUSTERING_ENABLED=true

# =============================================================================
# Validation Configuration
# =============================================================================

# Minimum completeness percentage required
MIN_COMPLETENESS_PERCENTAGE=90.0

# Minimum quality score required (0-1)
MIN_QUALITY_SCORE=0.85

# Enable strict validation
STRICT_VALIDATION=true

# =============================================================================
# Email Notifications (optional)
# =============================================================================

# Enable email notifications
EMAIL_NOTIFICATIONS_ENABLED=false

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=noreply@lbs-kg.com
SMTP_TO=admin@lbs-kg.com

# =============================================================================
# Slack Notifications (optional)
# =============================================================================

# Enable Slack notifications
SLACK_NOTIFICATIONS_ENABLED=false

# Slack Webhook URL
SLACK_WEBHOOK_URL=

# =============================================================================
# Performance Optimization
# =============================================================================

# Enable caching
ENABLE_CACHING=true

# Cache TTL in seconds
CACHE_TTL=3600

# Enable compression
ENABLE_COMPRESSION=true

# Worker threads for parallel processing
NUM_WORKERS=4

# =============================================================================
# Development/Debug Settings
# =============================================================================

# Enable debug mode
DEBUG=false

# Dry run mode (no actual API calls)
DRY_RUN=false

# Mock API responses
MOCK_API=false

# Save intermediate results
SAVE_INTERMEDIATE=true
